{
	"name": "arcadia-frontend",
	"version": "1.0.0",
	"description": "Client Repository of Aracadia",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "eslint --ext .js,.jsx,.ts,.tsx .",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|jsx|tsx|json)\"",
		"dev": "vite",
		"build": "tsc && vite build",
		"build:free-roam": "cd packages/free-roam && cp -r ./public/assets/phaser/* ../../public/assets/phaser && npm run build"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"yarn format",
			"yarn lint"
		]
	},
	"author": "Delta Force",
	"license": "ISC",
	"dependencies": {
		"free-roam": "file:packages/free-roam",
		"@emotion/react": "^11.10.5",
		"@mantine/core": "^5.10.0",
		"@mantine/hooks": "^5.10.0",
		"@mantine/notifications": "^5.10.0",
		"@reduxjs/toolkit": "^1.9.1",
		"@tabler/icons": "^1.118.0",
		"react": "^18.2.0",
		"react-beautiful-dnd": "^13.1.1",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^3.1.4",
		"react-helmet": "^6.1.0",
		"react-query": "^3.39.2",
		"react-redux": "^8.0.5",
		"react-router-dom": "^6.5.0",
		"redux-persist": "^6.0.0"
	},
	"devDependencies": {
		"@types/react": "^18.0.26",
		"@types/react-beautiful-dnd": "^13.1.3",
		"@types/react-dom": "^18.0.9",
		"@types/react-helmet": "^6.1.6",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"@vitejs/plugin-react": "^3.0.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.30.0",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"postcss": "^8.4.20",
		"prettier": "^2.8.1",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4",
		"vite": "^4.0.2"
	}
}
